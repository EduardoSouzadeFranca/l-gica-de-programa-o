programa {
  funcao inicio() {
    
  
    faca {
     inteiro ph
     leia(ph)
    
     se (ph > 7){
     escreva("Substância Básica.\n")
      }
      senao se(ph == 7){
     escreva("Substância Neutra.\n")
      }
      senao se(ph < 7 e ph > 0){
     escreva("Substância Ácida.\n")
      }
  
    } enquanto (ph != -1)

  }
}
